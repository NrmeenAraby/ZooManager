<Window x:Class="ZooManagerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZooManagerWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="692">
    <Grid>
        <Label Content="ZooList" HorizontalAlignment="Right" Margin="0,10,612,0" VerticalAlignment="Top" RenderTransformOrigin="1.948,0.167" Width="56"/>
        <ListBox x:Name="listZoos" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0" Height="228" Width="170" SelectionChanged="listZoos_SelectionChanged"/>
        <Label Content="Associated Animals List" HorizontalAlignment="Right" Margin="0,10,324,0" VerticalAlignment="Top" RenderTransformOrigin="1.948,0.167" Width="140"/>
        <ListBox x:Name="listAssociatedAnmials" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="228,41,0,0" Height="228" Width="181" RenderTransformOrigin="0.321,0.466"/>
        <ListBox x:Name="listAllAnmials" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="459,54,0,0" Height="357" Width="168"/>
        <Button Content="Delete Zoo" Margin="10,294,512,0" VerticalAlignment="Top" Click="DeleteZoo_Click" Height="35"/>
        <Button Content="Remove Animal"  Margin="234,294,288,0" VerticalAlignment="Top" Height="35"/>
        <Button Content="Add Zoo" Click="AddZoo_Click"  Margin="10,376,512,0" VerticalAlignment="Top" Height="37"/>
        <Button Content="Update Zoo" Margin="10,418,512,0" VerticalAlignment="Top" Height="36"/>
        <Button Content="Update Animals List"  Margin="228,418,294,0" VerticalAlignment="Top" Height="36"/>
        <Button Content="Add Animal" Click="AddAnimal_Click" Margin="228,378,294,0" VerticalAlignment="Top" Height="33"/>
        <Button Content="Delete Animal" Click="DeleteAnimal_Click" Margin="459,418,63,0" VerticalAlignment="Top" Height="36"/>
        <Button Content="Add animal to zoo" Click="AddAnimalToZoo_Click" Margin="459,10,63,0" VerticalAlignment="Top" Height="39"/>
        <TextBox x:Name="myTxtBox" TextWrapping="Wrap" Text="TextBox" Margin="10,334,286,106"/>

    </Grid>
</Window>
